<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- Tag 설정부분
		
	Url 맵핑 부분 -->
	<bean id="url-mapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="/base/current_time">baseController</prop>
				<prop key="/base/file_upload">baseController</prop>
			</props>
		</property>
	</bean>
	<!-- Url 맵핑 부분
	
	Controller 클래스 맵핑 부분 -->
	<bean id="baseResolver"
		class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver">
		<property name="mappings">
			<props>
				<prop key="/base/current_time">current_time</prop>
				<prop key="/base/file_upload">file_upload</prop>
			</props>
		</property>
	</bean>
	<bean id="baseController" class="project.web.backend.BaseController">
		<property name="methodNameResolver" ref="baseResolver" />
		<property name="baseLogic" ref="baseLogic" />
	</bean>
	<!-- Controller 클래스 맵핑 부분
	
	end -->
</beans>
